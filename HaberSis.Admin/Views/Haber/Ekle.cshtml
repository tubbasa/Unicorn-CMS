@model HaberSis.Data.Model.Haber
@{
    ViewBag.Title = "Haber Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<style>
    .bootstrap-tagsinput{
        width:100%
    }
</style>
<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form" method="post" enctype="multipart/form-data" action="@Url.Action("Ekle","Haber")" >
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">Üst Kategori Adı</label>
                            @Html.DropDownListFor(model => model.Kategori.KategoriAdi, new SelectList(ViewBag.Kategori, "ID", "KategoriAdi"), ("Seçiniz"), new { @class = "form-control", id = "ParentID" })
                        </div>*@
                        @*<div class="form-group">
                            <label for="exampleInputEmail1">Haber Başlığı</label>
                            <input type="text" class="form-control" id="haberBaslik" placeholder="Haber Başlığı">
                        </div>*@

                        <div class="form-group">
                            <label for="Kategori">Kategori</label>
                            @Html.DropDownListFor(x=> Model.KategoriId, new SelectList(ViewBag.Kategori,"ID","KategoriAdi"),("Seçiniz"),new {@class="form-control",id="KategoriID" })
                        </div>
                        <div class="form-group">
                            <label for="Baslik">Haber Başlığı</label>
                            @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control", id = "Baslik", placeholder = "Haber Başlığı" })
                            </div>
                        <div class="form-group">
                            <label for="KisaAciklama">Haber Kısa Açıklama</label>
                            @*@Html.TextBoxFor(x => x.KisaAciklama, new { @class = "form-control", id = "KisaAciklama", placeholder = "Haber Kısa Açıklaması" })*@
                            @Html.TextArea("KisaAciklama")
                            <script type="text/javascript">
                                var editor = CKEDITOR.instances['KisaAciklama'];
                                if (editor)
                                {
                                    editor.destroy(true);

                                }
                                CKEDITOR.replace('KisaAciklama', {enterMode:CKEDITOR.ENTER_BR,});
                            </script>
                            </div>
                        <div class="form-group">
                            <label for="Aciklama">Haber Açıklama</label>

                            @*@Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", id = "Aciklama", placeholder = "Haber Açıklaması" })*@

                            @Html.TextArea("Aciklama")
                            <script type="text/javascript">
                                var editor = CKEDITOR.instances["Aciklama"];
                                if (editor)
                                {
                                    editor.destroy(true);
                                }
                                CKEDITOR.replace("Aciklama", { enterMode: CKEDITOR.ENTER_BR, })
                            </script>
                            </div>

                        <div class="form-group">
                            <label for="Aciklama">Etiketler</label>

                            <input type="text" name="Etiket" data-role="tagsinput" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label for="Aciklama">Vitrin Resmi</label>

                           <input type="file" name="VitrinResmi" accept="image/*" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">Detay Resim(ler)</label>

                            <input type="file" name="DetayResim" accept="image/*" class="form-control" multiple />
                        </div>



                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(x => x.AktifMi)<span>Aktif mi?</span>
                                </label>
                            </div>
                            @*<a href="#" class="btn btn-default" onclick="HaberEkle()">Kaydet</a>*@
                        <input type="submit" />

</form>
                </div>
            </div>
        </div>
    </div>

</div>
